<style>
  .container {
    text-align: center;
    display:flex;
  }
  .content-item {
    width: 700px;
    display: flex;
    flex-direction: column;
  }
  .user-item{
    width : 350px;
    display:flex;
    flex-direction: column;
  }
  .post_form{
    margin : 2px auto;
  }
  .user_section{
    margin : 3px auto;
  }
  .list-group-item{
    border: 0px;
  }
  .clip-circle-30 {
    clip-path: circle(30px at center);
  }
  .w-20 {
    width: 20%!important;
  }
</style>
 
<div class ="container">
  <div class="content-item">
    <%if current_user.present?%>
      <% if @post.size == 0%>
        <div>
          게시물이 없습니다.
        </div>
      <%else%>
        <div class=list-group>
        <%@post.each do |post|%>
          <div class="list-group-item">
            <%= render 'form', post: post, user: User.where(id:post.user_id) %>
          </div>
        <%end%>
        </div>
      <%end%>
    <%else%>
      <div>
        로그인이 필요합니다.
      </div>
    <%end%>
  </div>
  <div class ="user-item">
    <div class ="user_section">
      <div class ="user_info">
        <%if current_user.present?%>
          <div class ="user_image">
            <%if current_user.image.present?%>
              <img src="<%= current_user.image%>" class="d-block w-20 clip-circle-30" alt="">
            <%else%>
              <img src="<%= "image/user.jpg"%>" class="d-block img-resize-default img-inner clip-circle-15" alt="">
            <%end%>
          </div>
          <%=link_to current_user.email, instagram_path(current_user.id)%> 
          <%=render 'user', users: User.where.not(id:current_user.id)%>
        <%else%>
          로그인이 필요합니다.
        <%end%>
      </div>
    </div>
  <div>
</div>