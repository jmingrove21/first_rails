<style>
  .container {
    text-align: center;
    display:flex;
  }
  .content-item {
    width: 700px;
    display: flex;
    flex-direction: column;
  }
  .user-item{
    width : 350px;
    display:flex;
    flex-direction: column;
  }
  .post_form{
    margin : 2px auto;
  }
  .user_section{
    margin : 3px auto;
  }
  .list-group-item{
    border: 0px;
  }
</style>
 
<div class ="container">
  <div class="content-item">
    <%if current_user.present?%>
      <% if @post.size == 0%>
        <div>
          게시물이 없습니다.
        </div>
      <%else%>
        <div class=list-group>
        <%@post.each do |post|%>
          <div class="list-group-item">
            <%= render 'form', post: post, user: User.where(id:post.user_id) %>
          </div>
        <%end%>
        </div>
      <%end%>
    <%else%>
      <div>
        로그인이 필요합니다.
      </div>
    <%end%>
  </div>
  <div class ="user-item" style="background:orange">
    <div class ="user_section">
      <div class ="user_image">
        유저 이미지 넣을 예정
      </div>
      <div class ="user_info">
        <%if current_user.present?%>
          <%=link_to current_user.email, instagram_path(current_user.id)%> 
        <%else%>
          로그인이 필요합니다.
        <%end%>
      </div>
    </div>
  <div>
</div>